<h2><%= @user.name %>さんとのチャット</h2>


    <table>
      <tr>
        <td>チャット</td>
      </tr>
   </table>

  <table id="chat_table">
      <%= render @chats %>
  </table>

<%= form_with model: @chat do |f| %>
    <%= f.text_field :message %>
    <%= f.hidden_field :room_id, value: @room.id %>
    <%= f.submit %>
<% end %>