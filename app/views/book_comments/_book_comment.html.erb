  <tr class="contents">
    <th><%= link_to user_path(book_comment.user) do %>
      <%= attachment_image_tag book_comment.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg", size:'30x30' %>
      <%= book_comment.user.name %>
      <% end %>
    </th>
    <th class="contents"><%= book_comment.comment %></th>
      <% if book_comment.user.id == current_user.id %>
        <th class="link">
          <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true %>
      <% end %>
    </th>
  </tr>