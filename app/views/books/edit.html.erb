  <div class="new">
    <h1>Editing Book</h1>
    
  <% if @book.errors.any? %>
    <div class="alert">
      <div class="alert-message">
        <% if @book.errors.count >= 2 %>
         <h3><%= @book.errors.count %> errors prohibited this book from being saved:<h3>
        <% else %>
        <h3><%= @book.errors.count %> error prohibited this book from being saved:<h3>
        <% end %>
      </div>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>
    
    <div class="post-form">
    <%= form_with model: @book, url:"/books/#{@book.id}", local: true do |f| %>
      
       <h4>Title</h4>
       <%= f.text_field :title, :size=>"25" %>
       
       <h4>Body</h4>
       <%= f.text_area :body, :size=>"27x3" %>
       <div class="btn">
       <%= f.submit "Update Book" %>
       </div>
      <% end %> 
    </div>
  </div>
  
  <div>
  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
</div>
