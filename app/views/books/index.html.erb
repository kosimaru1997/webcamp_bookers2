<%= render "users/user_info", user: @user%>
<%= render "books/new", book: @book_new%>

<div class="title"><h1>Books</h1></div>

  <table class="table">
    <tr class="book-table">
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    
    <% @books.each do |book| %>
    <tr class="contents">
        <th><%= link_to user_path(book.user.id) do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
          <%end%></th>
        <th class="content"><%= link_to "#{book.title}", book_path(book.id) %></th>
        <th class="content"><%= book.body %></th>
        <th class="link">
        </th>
    </tr>
    <% end %>
  </table>
