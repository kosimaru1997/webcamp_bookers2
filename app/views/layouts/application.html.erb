<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/75b4427fb2.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="navbar navbar-expand-lg navbar-dark bg-dark ">
      　<div class="container">
          <%= link_to "Bookers", "/", class:"navbar-brand" %>
          <div class="navbar navbar-expand-lg navbar-right navbar-brand">
            <% if user_signed_in? %>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
              <%= link_to user_path(current_user.id) do %>
                <i class="fas fa-home nav-link text-light">Home</i>
              <% end %>
              </li>
              <li class="nav-item">
              <%= link_to users_path do %>
                <i class="fas fa-users nav-link text-light">Users</i>
              <% end %>
              </li>
              <li class="nav-item">
              <%= link_to books_path do %>
                <i class="fas fa-book-open nav-link text-light">Books</i>
              <% end %>
              </li>
              <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt nav-link text-light">logout</i>
              <% end %>
              </li>
            </ul>  
            <% else %>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
              <%= link_to root_path do %>
                <i class="fas fa-home nav-link text-light">Home</i>
              <% end %>
              </li>
              <li class="nav-item">
              <%= link_to home_about_path do %>
                <span class="fas fa-link nav-link text-light">About</span>
              <% end %>
              </li>
              <li class="nav-item">
              <%= link_to new_user_registration_path do %>
                <i class="fas fa-user-plus nav-link text-light">sign up</i>
              <% end %>
              </li>
              <li class="nav-item">
              <%= link_to new_user_session_path do %>
                <i class="fas fa-sign-in-alt nav-link text-light">login</i>
              <% end %>
              </li>
            </ul>
            <% end %>
          </div>
        </div>
      </div>
      
        <div class="row">
          <div class="mx-auto">　
            <%= render "searches/search" %>
          </div>
        </div>
        
    </header>
      <%= flash[:notice] %>
    <%= yield %>
    <footer>
      <div>CopyRight Infratop.inc</div>
    </footer>
  </body>
</html>
