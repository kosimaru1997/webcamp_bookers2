<main>

<div class="container">
  <div class="row">
    
<div class="col-md-3">    
  <%= render "users/user_info", user: @user%>
  <%= render "books/new", book: @book_new%>
</div>

<div class="col-md-8 offset-md-1">

  <div class="title"><h1>Users</h1></div>
    <table class="table">
      <tr class="users-table">
        <th>image</th>
        <th>name</th>
        <th> </th>
      </tr>
      
      <% @users.each do |user| %>
      <tr class="contents">
          <th class="content"><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></th>
          <th class="content"><%= user.name %></th>
          <th class="link">
            <%= link_to "Show", user_path(user.id) %>
          </th>
      </tr>
      <% end %>
    </table>
</div>  
  
  </div>
</div>

</main>