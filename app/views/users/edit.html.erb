<h2>User info</h2>

  <% if @user.errors.any? %>
    <div class="alert">
      <div class="alert-message">
        <% if @user.errors.count >= 2 %>
         <h3><%= @user.errors.count %> errors prohibited this book from being saved:<h3>
        <% else %>
        <h3><%= @user.errors.count %> error prohibited this book from being saved:<h3>
        <% end %>
      </div>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>

<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName"%>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.attachment_field :profile_image %>
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction"%>
  <%= f.submit "Update User" %>
<% end %>
